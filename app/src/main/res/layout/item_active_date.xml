<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:id="@+id/RVdateLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/active_date_background"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            >

            <TextView
                android:id="@+id/TVActiveNumberItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/number_backgorund_white"
                android:layout_below="@+id/TVActiveDateDayItem"
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:text="16"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/pink"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVActiveDateMonthItem" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:orientation="vertical">

                <TextView
                android:id="@+id/TVActiveDateMonthItem"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="AÄŸustos"
                    android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                    android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TVActiveDateDayItem"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="left"
                    android:text="Pazartesi"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


            </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>



